{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@types/jest",
            "node_modules/@types/node"
        ],
        "types": [
            "jest",
            "node",
        ],
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
    },
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ],
    "filesGlob": [
        "./node_modules/@types/**/*.d.ts",
    ],
}